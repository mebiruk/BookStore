<% provide :title, t(".title") %>
<h2><%= t ".title" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t(".email") %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".name") %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".phone") %>
        <%= f.text_field :phone, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".address") %>
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t ".waiting_confirm" %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label t(".password") %> <i>(<%= t ".leave_blank" %>)</i>
        <%= f.password_field :password, class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> <%= t ".character_min" %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label t(".password_confirm") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".current_password") %> <i>(<%= t ".need_currentpass" %>)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".update"), class: "btn btn-primary btn_custom" %>
      </div>
    <% end %>
  </div>
</div>
