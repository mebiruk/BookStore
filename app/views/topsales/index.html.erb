<% provide :title, t(".topsale") %>
<section class="main-detail">
  <div class="container">
    <div class="row">
      <div class="pathway">
        <ul class="path">
          <li><%= link_to t(".home"), root_url %></li>
          <li><%= link_to t(".topsale"), "#" %></li>
        </ul>
      </div> <!-- het pathway -->
      <div class="block-content">
        <div class="container">
          <div class="block">
            <h1><%= t ".topsale" %></h1>
            <div class="pagesright">
            </div>
            <div class="allproducts">
              <% @top.each do |product| %>
                <div class="productcontainer">
                  <div class="oneproduct">
                    <div class="products">
                      <div class="image">
                        <%= link_to product do %>
                        <%= image_tag product.picture.url %>
                        <% end %>
                      </div>
                      <div class="productname">
                        <%= link_to product.title, product %>
                      </div>
                      <div class="fields">
                        <%= product.author_name %>
                      </div>
                      <div class="prices">
                        <%= number_to_currency product.price, locale: params[:locale] %>
                      </div>
                    </div>
                  </div> <!-- hetmotproduct -->
                </div> <!-- het productcontainer -->
              <% end %>
            </div> <!-- het allproduct -->
          </div> <!-- het block -->
        </div>
      </div> <!-- het block-content -->
    </div>
  </div>
</section>
