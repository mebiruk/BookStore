<% provide :title, @category.name %>
<section class="main-detail">
  <div class="container">
    <div class="row">
      <div class="pathway">
        <ul class="path">
          <li><%= link_to t(".home"), root_url %></li>
          <% if @category.parent.present? %>
            <li><%= link_to @category.parent.name, @category.parent %></li>
          <% end %>
          <li><%= link_to @category.name, @category %></li>
        </ul>
      </div> <!-- het pathway -->
      <div class="block-content">
        <div class="container">
          <div class="block">
            <h1><%= @category.name %></h1>
            <div class="pagesright">
            </div>
            <div class="allproducts">
              <%= render @products %>
            </div> <!-- het allproduct -->
            <%= paginate @products %>
          </div> <!-- het block -->
        </div>
      </div> <!-- het block-content -->
    </div>
  </div>
</section>
