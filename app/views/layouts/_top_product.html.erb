<div class="row">
  <div class="floor1 floor2">
    <div class="title">
      <h2>
        <p class="titlechild titlechild2"><%= t ".top_sale"%></p>
        <%= link_to t(".seeall"), topsale_path, class: "seeall" %>
      </h2>
    </div> <!-- het title -->
    <div class="clear" style="clear:both;"></div>
    <div class="block-content">
      <div class="block">
        <div class="allproducts">
          <% @top.each do |product| %>
            <div class="productcontainer p2">
              <div class="oneproduct">
                <div class="products">
                  <div class="image">
                    <%= link_to product do %>
                    <%= image_tag product.picture.url %>
                    <% end %>
                  </div>
                  <div class="productname">
                    <%= link_to product.title, product %>
                  </div>
                  <div class="fields">
                    <%= product.author_name %>
                  </div>
                  <div class="prices">
                    <%= number_to_currency product.price, locale: params[:locale] %>
                  </div>
                </div>
              </div> <!-- hetmotproduct -->
            </div> <!-- het productcontainer -->
          <% end %>
        </div> <!-- het slideshow -->
      </div> <!-- hetblockcontent -->
    </div>
  </div>
</div>
