<%= form_for build_review, url: reviews_path, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label t(".rate") %>
  <span class="rating">
    <% for i in Settings.rate %>
      <i class="fa fa-star" data-rate="<%= i %>"></i>
    <% end %>
    <%= f.hidden_field :rate, value: 0 %>
  </span>
  <%= f.hidden_field :product_id, value: @product.id %>
  <div class="form-group" >
    <%= f.text_field :content, class: "form-control content-form", placeholder: t(".comment"), required: true %>
    <%= f.submit t(".submit"), class: "btn btn-primary btn_custom" %>
  </div>
<% end %>
